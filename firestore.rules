rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isVero() {
      return isAuthenticated() && 
             (request.auth.token.email == 'vero.media.150@gmail.com' ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'vero');
    }
    
    function isFaculty() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'faculty';
    }
    
    function isFacultyOrVero() {
      return isVero() || isFaculty();
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId) || isVero() || 
                    (isFaculty() && resource.data.facultyId == request.auth.uid);
      allow update: if isOwner(userId) && 
                      !request.resource.data.diff(resource.data).affectedKeys()
                        .hasAny(['role', 'isAdmin', 'paymentStatus', 'lifetimeAccess', 'plan']);
      allow update: if isVero();
      allow create, delete: if isVero();
    }
    
    // Faculties collection
    match /faculties/{facultyId} {
      allow read: if isOwner(facultyId) || isVero();
      allow write: if isVero();
    }
    
    // Batches collection
    match /batches/{batchId} {
      allow read: if isVero() || 
                    (isFaculty() && resource.data.facultyId == request.auth.uid);
      allow create: if isFacultyOrVero();
      allow update: if isVero() || 
                      (isFaculty() && resource.data.facultyId == request.auth.uid);
      allow delete: if isVero() || 
                      (isFaculty() && resource.data.facultyId == request.auth.uid);
    }
    
    // Payments collection
    match /payments/{paymentId} {
      allow read: if isOwner(resource.data.userId) || isVero();
      allow write: if isVero();
    }
    
    // Admin logs - VERO only
    match /admin_logs/{logId} {
      allow read, write: if isVero();
    }
    
    // Quiz history
    match /quiz_history/{quizId} {
      allow read: if isOwner(resource.data.userId) || isVero() ||
                    (isFaculty() && 
                     get(/databases/$(database)/documents/users/$(resource.data.userId)).data.facultyId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId) || isVero();
    }
    
    // Grading history
    match /grading_history/{gradingId} {
      allow read: if isOwner(resource.data.userId) || isVero() ||
                    (isFaculty() && 
                     get(/databases/$(database)/documents/users/$(resource.data.userId)).data.facultyId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId) || isVero();
    }
    
    // Chat sessions
    match /chat_sessions/{sessionId} {
      allow read: if isOwner(resource.data.userId) || isVero();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId) || isVero();
    }
    
    // Daily activity
    match /daily_activity/{activityId} {
      allow read, write: if isAuthenticated() && activityId.matches(request.auth.uid + '_.*') || isVero();
    }
    
    // Study sessions
    match /study_sessions/{sessionId} {
      allow read: if isOwner(resource.data.userId) || isVero();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId) || isVero();
    }
    
    // Analytics
    match /analytics/{userId} {
      allow read: if isOwner(userId) || isVero() ||
                    (isFaculty() && 
                     get(/databases/$(database)/documents/users/$(userId)).data.facultyId == request.auth.uid);
      allow write: if isOwner(userId) || isVero();
    }
  }
}
